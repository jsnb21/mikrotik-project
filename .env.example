# Flask/Application Configuration
# =================================

# Security
# Run in terminal to generate a secure key: python -c 'import secrets; print(secrets.token_hex())'
export SECRET_KEY='your-secret-key-here'

# Database (Default uses SQLite local file 'pisonet.db')
# Format: postgresql://username:password@localhost:5432/db_name
# export DATABASE_URL='postgresql://...'


# MikroTik RouterOS Configuration
# ==================================
# These settings are used to connect to your MikroTik router via API.

# The IP address of your MikroTik Router (Default Gateway)
export MIKROTIK_HOST='192.168.88.1'

# The API Port (Default is 8728, SSL is 8729)
# Ensure "api" service is enabled in IP -> Services in WinBox
export MIKROTIK_PORT='8728'

# Create a dedicated API user in System -> Users
# Give it 'read' and 'write' permissions (or 'full')
export MIKROTIK_USER='api_user'
export MIKROTIK_PASSWORD='secure_password_here'
export MIKROTIK_USE_SSL='False'  # Set to 'True' if using SSL/TLS


# Interface Settings
# ==================================
# The WAN interface name to monitor traffic (check in Interfaces list)
export MIKROTIK_WAN_INTERFACE='ether1'
